@page
@using Microsoft.AspNetCore.Mvc.ModelBinding
@model Bank.Pages.Customers.CustomersModel
@{
    ViewData["Title"] = "Customers";
}

<head>
    <link href="~/css/styles.css" rel="stylesheet" />
</head>

<!-- Signup-->
<section class="signup-section" id="signup">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5">

            <div class="card d-flex justify-content-center">

                <div class="card-header mt-2 text-center">
                    <h1>Customers </h1>
                </div>

                <div class="card-body">
                    <div class="mb-3 mt-1 d-flex justify-content-between">
                        <partial name="_BackPartial" />
                        <div class="text-end">Page no. @Model.CurrentPage of @Model.PageCount</div>
                    </div>

                    <div class="d-flex justify-content-center">
                        <form method="get" class="m-3 text-center">
                            <input asp-for="@Model.Q" placeholder="Search" />
                            <input type="hidden" asp-for="@Model.Country" />
                            <button type="submit" class="bg-white border-0">
                                <i class="fa-solid fa-magnifying-glass"></i>
                            </button>
                        </form>

                        <div class="m-3">
                            <a asp-page="/Customers/NewCustomer"
                               class="btn btn-sm btn-primary">
                                Add Customer
                            </a>
                        </div>
                    </div>                 

                    <div class="d-flex justify-content-center align-items-center">

                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th class="th-box" scope="col">
                                        <div d-flex>
                                            Id
                                            <a asp-page="/Customers/Customers"
                                               asp-route-q="@Model.Q"
                                               asp-route-sortColumn="Id"
                                               asp-route-country="@Model.Country"
                                               asp-route-sortOrder="asc"
                                               style="text-decoration: none">
                                                <i class="fa-solid fa-angle-up"></i>
                                            </a>
                                            <a asp-page="/Customers/Customers"
                                               asp-route-q="@Model.Q"
                                               asp-route-sortColumn="Id"
                                               asp-route-country="@Model.Country"
                                               asp-route-sortOrder="desc"
                                               style="text-decoration:none">
                                                <i class="fa-solid fa-angle-down"></i>
                                            </a>
                                        </div>
                                    </th>
                                    <th scope="col">
                                        <div>

                                        Name
                                        <a asp-page="/Customers/Customers"
                                           asp-route-q="@Model.Q"
                                           asp-route-sortColumn="Name"
                                           asp-route-country="@Model.Country"
                                           asp-route-sortOrder="asc"
                                           style="text-decoration: none">
                                            <i class="fa-solid fa-angle-up"></i>
                                        </a>
                                        <a asp-page="/Customers/Customers"
                                           asp-route-q="@Model.Q"
                                           asp-route-sortColumn="Name"
                                           asp-route-country="@Model.Country"
                                           asp-route-sortOrder="desc"
                                           style="text-decoration:none">
                                            <i class="fa-solid fa-angle-down"></i>
                                            </a>
                                        </div>
                                    </th>

                                    <th scope="col">
                                        <div>

                                        National Id
                                        <a asp-page="/Customers/Customers"
                                           asp-route-q="@Model.Q"
                                           asp-route-sortColumn="NationalId"
                                           asp-route-country="@Model.Country"
                                           asp-route-sortOrder="asc"
                                           style="text-decoration: none">
                                            <i class="fa-solid fa-angle-up"></i>
                                        </a>
                                        <a asp-page="/Customers/Customers"
                                           asp-route-q="@Model.Q"
                                           asp-route-sortColumn="NationalId"
                                           asp-route-country="@Model.Country"
                                           asp-route-sortOrder="desc"
                                           style="text-decoration:none">
                                            <i class="fa-solid fa-angle-down"></i>
                                            </a>
                                        </div>
                                    </th>

                                    <th scope="col">
                                        <div>

                                        Country
                                        <a asp-page="/Customers/Customers"
                                           asp-route-q="@Model.Q"
                                           asp-route-sortColumn="Country"
                                           asp-route-country="@Model.Country"
                                           asp-route-sortOrder="asc"
                                           style="text-decoration: none">
                                            <i class="fa-solid fa-angle-up"></i>
                                        </a>
                                        <a asp-page="/Customers/Customers"
                                           asp-route-q="@Model.Q"
                                           asp-route-sortColumn="Country"
                                           asp-route-country="@Model.Country"
                                           asp-route-sortOrder="desc"
                                           style="text-decoration:none">
                                            <i class="fa-solid fa-angle-down"></i>
                                            </a>
                                        </div>
                                    </th>
                                    <th class="d-none d-xl-table-cell" scope="col">
                                        <div>

                                        City
                                        <a asp-page="/Customers/Customers"
                                           asp-route-q="@Model.Q"
                                           asp-route-sortColumn="City"
                                           asp-route-country="@Model.Country"
                                           asp-route-sortOrder="asc"
                                           style="text-decoration: none">
                                            <i class="fa-solid fa-angle-up"></i>
                                        </a>
                                        <a asp-page="/Customers/Customers"
                                           asp-route-q="@Model.Q"
                                           asp-route-sortColumn="City"
                                           asp-route-country="@Model.Country"
                                           asp-route-sortOrder="desc"
                                           style="text-decoration:none">
                                            <i class="fa-solid fa-angle-down"></i>
                                        </a>
                                        </div>
                                    </th>

                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var c in Model.Customers)
                                {
                                    <tr>
                                        <td>@c.CustomerId</td>
                                        <td>@c.Surname @c.Givenname</td>
                                        <td>@c.NationalId</td>
                                        <td>@c.Country</td>
                                        <td class="d-none d-xl-table-cell">@c.City</td>

                                        @*för att komma till rätt sida måste asp-route-id (id) vara samma som i customer onget-parameter *@
                                        <td><a asp-page="/Customers/Customer" asp-route-customerId="@c.CustomerId" class="btn btn-sm btn-primary">View</a></td>

                                    </tr>
                                }
                                <tr>
                                    <td>
                                        @if (Model.CurrentPage != 1)
                                        {
                                            <a class="btn btn-lg btn-secondary"
                                           asp-page="/Customers/Customers"
                                           asp-route-country="@Model.Country"
                                           asp-route-q="@Model.Q"
                                           asp-route-sortColumn="@Model.SortColumn"
                                           asp-route-sortOrder="@Model.SortOrder"
                                           asp-route-pageNo="@(Model.CurrentPage - 1)">
                                                Prev
                                            </a>
                                        }
                                    </td>
                                    <td colspan="4">
                                        @for (int i = 1; i <= Model.PageCount; i++)
                                        {
                                            string activeBtn = "btn-light";
                                            if (i == Model.CurrentPage)
                                            {
                                                activeBtn = "btn-secondary";
                                            }

                                            <a class="btn @activeBtn"
                                           asp-page="/Customers/Customers"
                                           asp-route-country="@Model.Country"
                                           asp-route-q="@Model.Q"
                                           asp-route-sortColumn="@Model.SortColumn"
                                           asp-route-sortOrder="@Model.SortOrder"
                                           asp-route-pageNo="@i">
                                                @i
                                            </a>
                                        }
                                    </td>
                                    <td>
                                        @if (Model.CurrentPage != Model.LastPage)
                                        {
                                            <a class="btn btn-lg btn-secondary"
                                           asp-page="/Customers/Customers"
                                           asp-route-country="@Model.Country"
                                           asp-route-q="@Model.Q"
                                           asp-route-sortColumn="@Model.SortOrder"
                                           asp-route-sortOrder="@Model.SortOrder"
                                           asp-route-pageNo="@(Model.CurrentPage + 1)">
                                                Next
                                            </a>
                                        }

                                    </td>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                    <div>
                        <partial name="_BackPartial" />
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>


