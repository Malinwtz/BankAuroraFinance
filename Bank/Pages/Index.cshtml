@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!-- Masthead-->
<header class="masthead pt-5 bg-black">
    <div class="container pt-200 px-4 d-flex h-auto align-items-center justify-content-center">
        <div class="mt-3 pt-200">

            <div class="mt-5 m-3 text-center">

                <div class="card m-3 mb-6">

                    <div class="card-body d-md-flex justify-content-around">
                        @foreach (var supp in Model.Index)
                        {
                            <div class="fs-4 font-weight-bold">Total Customers: @supp.NumberOfCustomers</div>
                            <div class="fs-4 font-weight-bold">Total Accounts: @supp.Accounts</div>
                            <div class="fs-4 font-weight-bold">Total Balance: @supp.Balance</div>
                        }
                    </div>
                </div>


                <div class="d-md-flex justify-content-between ">

                    @foreach (var row in Model.Countries)
                    {
                        <div class="card m-3">
                            <div class="fs-1 font-weight-bold mt-2">@row.Country</div>

                            <div class="card-body">
                                <div class="align-items-start">
                                    <div class="mt-1">Customers: @row.NumberOfCustomers</div>
                                    <div class="mt-1">Accounts: @row.NumberOfAccounts</div>
                                    <div class="mt-1">Balance: @row.BalancePerCountry</div>
                                </div>
                                <div class="mt-2">
                                    <a asp-page="/Accounts/TopTenAccounts"
                                   asp-route-country="@row.Country"
                                       class="btn btn-primary">View Top 10 Accounts</a>

                                </div>
                            </div>
                        </div>
                    }

                </div>

            </div>
        </div>
    </div>
</header>

