@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!-- Masthead-->
<header class="masthead pt-5 bg-black">
    <div class="container px-4 d-flex h-auto align-items-center justify-content-center">
        <div class="justify-content-center pt-200">

            <div class="text-center">
                <h1 class="display-4  pt-5">Country Statistics</h1>
    
                <table class="table table-striped table-dark">
                    <thead>
                    <tr>
                        <th scope="col">Number of Customers</th>
                        <th scope="col">Number of Accounts</th>
                        <th scope="col">Balance</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var supp in Model.Index)
                    {
                        <tr>
                            <td>@supp.NumberOfCustomers</td>
                            <td>@supp.Accounts</td>
                            <td>@supp.Balance</td>
                        </tr>
                    }
                    </tbody>
                </table>
                
                <table class="table table-striped table-dark">
                    <thead>
                    <tr>
                        <th scope="col">Country</th>
                        <th scope="col">Customers</th>
                        <th scope="col">Accounts</th>
                        <th scope="col">Balance</th>
                        <th scope="col">Top 10 Accounts</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var row in Model.Countries)
                    {
                        <tr>
                            <th scope="col">@row.Country</th>
                            <th scope="col">@row.NumberOfCustomers</th>
                            <th scope="col">@row.NumberOfAccounts</th>
                            <th scope="col">@row.BalancePerCountry</th>
                            
                            @*för att komma till rätt sida måste asp-route-id (id) vara samma som i account onget-parameter *@
                            <td><a asp-page="/Accounts/TopTenAccounts" asp-route-country="@row.Country" class="btn btn-primary">View</a></td>
                        </tr>
                    }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</header>


