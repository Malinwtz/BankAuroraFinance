@page
@model Bank.Pages.Accounts.TopTenAccountsModel
@{
    ViewData["Title"] = "Top 10 Accounts";
}

<head>
    <link href="~/css/styles.css" rel="stylesheet" />
</head>

<!-- Signup-->
<section class="signup-section" id="signup">
    <div class="container px-4 px-lg-5">

        <div class="row gx-4 gx-lg-5">

            <div class="text-center">
                <h1 class="display-4">Top 10 Accounts </h1>
                <h1 class="display-4">@Model.Country</h1>

                <table class="table table-striped table-dark">
                    <thead>
                        <tr>
                            <th scope="col">
                                Id

                            </th>
                            <th scope="col">
                                Balance

                            </th>
                            <th scope="col">
                                Frequency

                            </th>
                            <th scope="col">
                                Created

                            </th>
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var a in Model.Accounts)
                        {
                            <tr>
                                <td>@a.AccountId</td>
                                <td>@a.Balance</td>
                                <td>@a.Frequency</td>
                                <td>@a.Created.ToShortDateString()</td>

                                <td><a asp-page="/Accounts/Account" asp-route-accountId="@a.AccountId" class="btn btn-sm btn-primary">View</a></td>

                            </tr>
                        }

                    </tbody>
                </table>

                <div class="d-flex justify-content-center">
                    <div class="m-3">
                        <a asp-page="/Index"
                           class="btn btn-sm btn-secondary">
                            Back
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

