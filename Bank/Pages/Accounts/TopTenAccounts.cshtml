<head>
    <link href="~/css/styles.css" rel="stylesheet" />
</head>

<!-- Masthead-->
<header class="masthead pt-5 bg-black">
    <div class="container px-4 d-flex h-auto align-items-center justify-content-center">
        <div class="justify-content-center pt-200">

            <div class="text-center">
                <h1 class="display-4">Top 10 Accounts in @Model.Country</h1>


                <table class="table table-striped table-dark">
                    <thead>
                        <tr>
                            <th scope="col">
                                Id
                               
                            </th>
                            <th scope="col">
                                Balance
                             
                            </th>
                            <th scope="col">
                                Frequency
                              
                            </th>
                            <th scope="col">
                                Created
                            
                            </th>
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var a in Model.Accounts)
                        {
                            <tr>
                                <td>@a.AccountId</td>
                                <td>@a.Balance</td>
                                <td>@a.Frequency</td>
                                <td>@a.Created.ToShortDateString()</td>

                                <td><a asp-page="/Accounts/Account" asp-route-accountId="@a.AccountId" class="btn btn-sm btn-primary">View</a></td>

                            </tr>
                        }                       

                    </tbody>
                </table>

            </div>
        </div>
    </div>
</header>

<!-- Signup-->
<section class="signup-section" id="signup">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5">
            <div class="col-md-10 col-lg-8 mx-auto text-center">
            </div>
        </div>
    </div>
</section>
<!-- Contact-->
<section class="contact-section bg-black">
    <div class="container px-4 px-lg-5">
    </div>
</section>
